<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


    <ScrollView
            android:scrollbars="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_marginBottom="@dimen/margin_scroll_view_empty_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <FrameLayout
                        android:id="@+id/empty_resume_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <FrameLayout
                        android:id="@+id/empty_resume_fragment2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/empty_resume_fragment1"
                        />
        </RelativeLayout>


    </ScrollView>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:id="@+id/send_resume"
                style="?android:buttonStyleSmall"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="sendResume"/>

</RelativeLayout>
